{
	"extends": "../tsconfig.base.json",
	"include": ["src/**/*"],
	"extensionsToTreatAsEsm": [".ts", ".tsx", ".mts", "js"],
	"exclude": ["dist"],
	"compilerOptions": {
		"allowImportingTsExtensions": true,
		"emitDeclarationOnly": true,
		"lib": ["ESNext", "DOM"],
		"types": ["node"],
		"outDir": "./dist",
		"rootDir": "./src"
	}
}
