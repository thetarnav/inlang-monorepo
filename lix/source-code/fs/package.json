{
	"name": "@lix-js/fs",
	"version": "0.4.0",
	"type": "module",
	"publishConfig": {
		"access": "public"
	},
	"exports": {
		".": "./dist/index.js",
		"./src/*.ts": "./src/index.d.ts"
	},
	"types": "./dist/*.d.ts",
	"files": [
		"./dist",
		"./src"
	],
	"scripts": {
		"build": "tsc --build && esbuild ./src/index.ts --bundle --outfile=dist/index.js --format=esm --tree-shaking=true",
		"dev": "npm-run-all --print-label --parallel watch:types watch:build",
		"watch:build": "esbuild ./src/index.ts --bundle --outfile=dist/index.js --format=esm --watch",
		"watch:types": "tsc --watch",
		"test": "vitest run --passWithNoTests --coverage",
		"lint": "eslint ./src --fix",
		"format": "prettier ./src --write",
		"clean": "rm -rf ./dist ./node_modules"
	},
	"license": "Apache-2.0",
	"devDependencies": {
		"npm-run-all": "^4.1.5",
		"esbuild": "0.19.7",
		"@types/node": "20.8.10",
		"@vitest/coverage-v8": "0.34.3",
		"tsd": "^0.28.1",
		"typescript": "5.2.2",
		"vitest": "0.34.3"
	}
}
