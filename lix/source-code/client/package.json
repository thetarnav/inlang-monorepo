{
	"name": "@lix-js/client",
	"version": "0.2.0",
	"type": "module",
	"publishConfig": {
		"access": "public"
	},
	"exports": {
		".": "./dist/index.js",
		"./src/*.ts": "./src/*.ts"
	},
	"types": "./dist/index.d.ts",
	"files": [
		"./dist",
		"./src"
	],
	"scripts": {
		"build": "tsc --build && esbuild ./src/index.ts --minify=true --bundle --tree-shaking=true --splitting --external:@inlang/env-variables --outdir=dist --format=esm --tree-shaking=true",
		"dev": "npm-run-all --print-label --parallel watch:types watch:build",
		"watch:types": "tsc --watch",
		"watch:build": "esbuild ./src/index.ts --bundle --minify=true --external:@inlang/env-variables --outdir=dist/ --format=esm --splitting --watch",
		"test": "vitest run --coverage --test-timeout 60000",
		"bench": "vitest bench --watch=false",
		"lint": "eslint ./src --fix",
		"format": "prettier ./src --write",
		"clean": "rm -rf ./dist ./node_modules"
	},
	"dependencies": {
		"@inlang/env-variables": "workspace:*",
		"@lix-js/fs": "workspace:*",
		"@octokit/types": "11.1.0",
		"isomorphic-git": "1.24.5",
		"npm-run-all": "^4.1.5",
		"octokit": "3.1.0",
		"solid-js": "1.7.11"
	},
	"license": "Apache-2.0",
	"devDependencies": {
		"@vitest/coverage-v8": "0.34.3",
		"esbuild": "0.19.7",
		"typescript": "5.2.2",
		"vitest": "0.34.3"
	}
}
